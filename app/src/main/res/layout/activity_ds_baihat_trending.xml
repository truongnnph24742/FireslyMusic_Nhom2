<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f111"
    tools:context=".Activity.DsBaihatTrendingActivity">
    <androidx.cardview.widget.CardView
        android:id="@+id/cv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        >
        <ImageView
            android:id="@+id/img_album"
            android:layout_width="160dp"
            android:layout_height="175dp"

            android:src="@drawable/cochoicochiu"
            android:scaleType="centerCrop"
            android:background="@drawable/custom_edit_dangnhap"
            />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/txt_namealbum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cv"
        android:layout_centerHorizontal="true"
        android:textSize="22dp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:textColor="#fff"
        android:text="Top bài hát trending"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_dsbaihattrending"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/txt_namealbum"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp" />
</RelativeLayout>