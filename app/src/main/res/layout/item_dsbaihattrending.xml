<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/layout_ln">
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="10dp">
        <ImageView
            android:id="@+id/img_baihattd"
            android:layout_width="70dp"
            android:layout_height="70dp"

            android:background="@drawable/custom_khunganh"
            android:scaleType="centerCrop"
            android:src="@drawable/cochoicochiu"

            />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="235dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        >
        <TextView
            android:id="@+id/tv_tenbaihattd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên bài hát"
            android:textSize="20dp"
            android:textColor="#FFF"
            android:padding="10dp"
            />
        <TextView
            android:id="@+id/tv_tencasitd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ca sĩ"
            android:textSize="16dp"
            android:padding="10dp"
            android:textColor="#D6CECE"
            />

    </LinearLayout>
    <ImageView
        android:id="@+id/yeuthich"
        android:layout_marginTop="30dp"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_baseline_favorite_border_24"
        />
</LinearLayout>