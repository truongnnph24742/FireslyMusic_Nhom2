<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f111"
    android:id="@+id/layout_rln"
    tools:context=".Activity.MonoActivity">
    <androidx.cardview.widget.CardView
        android:id="@+id/cv_DS_chitiet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="25dp"
        android:layout_centerHorizontal="true"
        >
        <ImageView
            android:id="@+id/img_mono"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:src="@drawable/cochoicochiu"
            android:scaleType="centerCrop"
            android:background="@drawable/custom_edit_dangnhap"
            />
        <TextView
            android:id="@+id/tv_mono"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textSize="50dp"
            android:textStyle="bold"
            android:layout_marginTop="220dp"
            android:textColor="@color/white"
            android:text="SƠN TÙNG"
            android:padding="5dp"
            android:gravity="center"
            android:fontFamily="@font/herborn"
            />
    </androidx.cardview.widget.CardView>



    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_mono"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/cv_DS_chitiet"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        />
</RelativeLayout>